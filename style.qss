}
QTreeWidget::branch:open:has-children:!has-siblings,
QTreeWidget::branch:open:has-children:has-siblings {
    border-image: none;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTUuNSA0LjVMNS41IDcuNUw2IDdMNS41IDQuNVoiIGZpbGw9IiM2NjY2NjYiLz4KPC9zdmc+Cg==);
}

/* === 기타 === */
QStatusBar {
    color: #6c757d;
}
QSplitter::handle {
    background-color: #dee2e6;
}
QSplitter::handle:horizontal {
    width: 1px;
}
QCheckBox {
    spacing: 8px;
    font-size: 10pt;
    color: #495057;
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #ced4da;
    border-radius: 3px;
    background-color: #ffffff;
}
QCheckBox::indicator:checked {
    background-color: #1976d2;
    border: 2px solid #1976d2;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEwIDNMNC41IDguNUwyIDZMMSA3TDQuNSA5LjVMMTEgM0wxMCAzWiIgZmlsbD0id2hpdGUiLz4KPC9zdmc+Cg==);
}
QCheckBox::indicator:hover {
    border: 2px solid #1976d2;
    background-color: #f5f5f5;
}
QMenu {
    background-color: #ffffff;
    border: 1px solid #ced4da;
    padding: 5px;
}
QMenu::item {
    padding: 8px 24px; /* 패딩 증가 */
    border-radius: 4px;
}
QMenu::item:selected {
    background-color: #e9ecef;
    color: #212529;
}
QMenu::separator {
    height: 1px;
    background-color: #e9ecef; /* 구분선 색상 */
    margin: 5px 0px; /* 위아래 여백 */
}

/* === 뷰어 툴바 === */
QToolBar#RichViewToolbar {
    background-color: #f1f3f5;
    border-bottom: none;
    padding: 2px;
    spacing: 5px;
}

QToolBar#RichViewToolbar QToolButton, 
QToolBar#RichViewToolbar QPushButton {
    background-color: transparent;
    padding: 4px;
    border-radius: 4px;
    margin: 1px;
    border: 1px solid transparent; /* Add transparent border for spacing */
}

QToolBar#RichViewToolbar QToolButton:hover, 
QToolBar#RichViewToolbar QPushButton:hover {
    background-color: #e9ecef;
}

QToolBar#RichViewToolbar QToolButton:pressed, 
QToolBar#RichViewToolbar QPushButton:pressed {
    background-color: #dee2e6;
    border: 1px solid #ced4da; /* Inset effect */
}

QToolBar#RichViewToolbar QToolButton:checked, 
QToolBar#RichViewToolbar QPushButton:checked {
    background-color: #ddeeff; /* Brighter blue */
    border: 1px solid #aaccff;
}

QToolBar#RichViewToolbar QLabel {
    color: #212529;
    padding: 0 5px;
}

QToolBar#RichViewToolbar::separator {
    background-color: #dee2e6;
    width: 1px;
    margin: 5px 3px;
}

/* === 툴바 영역 컨테이너 === */
#ToolbarArea {
    background-color: #f1f3f5;
    border-bottom: 1px solid #dee2e6;
}

#SearchWidget {
    background-color: #f1f3f5;
    padding: 4px 8px;
}

#SearchWidget QLineEdit {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 5px 8px;
    background-color: #ffffff;
}

#SearchWidget QPushButton {
    background-color: transparent;
    padding: 4px;
    border-radius: 4px;
    margin: 1px;
    border: none;
}

#SearchWidget QPushButton:hover {
    background-color: #e9ecef;
}

#SearchWidget QPushButton:pressed {
    background-color: #dee2e6;
}

#SearchWidget #MatchCountLabel {
    color: #495057;
    font-size: 9pt;
    padding: 0 5px;
}
